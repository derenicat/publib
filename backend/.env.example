# Environment variables for Publib Backend

# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB Connection
# Example for local MongoDB: DATABASE_URL=mongodb://localhost:27017/publib
# Example for MongoDB Atlas: DATABASE_URL=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/publib
DATABASE_URL=

# JWT Configuration
# Use a long, random, and secret string for production
JWT_SECRET=a-very-secret-and-long-string-for-jwt
JWT_EXPIRES_IN=90d

# Email Configuration (using Mailtrap for development)
EMAIL_HOST=sandbox.smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM="Publib Support <support@publib.io>"

# Google Books API Configuration
GOOGLE_BOOKS_API_KEY=
GOOGLE_BOOKS_API_URL=https://www.googleapis.com/books/v1/volumes
